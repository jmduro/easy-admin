{
  "name": "easy-admin",
  "displayName": "Easy Admin",
  "description": "Organizaci√≥n de tareas eficientes en entornos de desarrollo",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "easy-admin.agregarTarea",
        "title": "Agregar tarea",
        "icon": "$(add)"
      },
      {
        "command": "easy-admin.eliminarTarea",
        "title": "Eliminar tarea",
        "icon": "$(remove-close)"
      },
      {
        "command": "easy-admin.altenarEstado",
        "title": "Marcar tarea como completada",
        "icon": "$(check)"
      },
      {
        "command": "easy-admin.example",
        "title": "Mostrar ejemplo"
      },
      {
        "command": "easy-admin.abrirPanel",
        "title": "Abrir Panel"
      },
      {
        "command": "easy-admin.tareas",
        "title": "Mostrar Tareas"
      },
      {
        "command": "easy-admin.colaboradores",
        "title": "Mostrar Colaboradores"
      },
      {
        "command": "easy-admin.calendario",
        "title": "Desplegar Calendario"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "easy-admin.agregarTarea",
          "when": "view == tareas",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "easy-admin.eliminarTarea",
          "when": "view == tareas && viewItem == tarea",
          "group": "inline"
        },
        {
          "command": "easy-admin.alternarEstado",
          "when": "view == tareas && viewItem == tarea",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "easy-admin",
          "title": "Easy Admin",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "easy-admin": [
        {
          "id": "tareas",
          "name": "Tareas"
        },
        {
          "id": "colaboradores",
          "name": "Colaboradores"
        },
        {
          "id": "calendario",
          "name": "Calendario"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "@vscode/test-electron": "^2.3.6"
  }
}